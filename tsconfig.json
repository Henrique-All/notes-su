{
  "compilerOptions": {
    "target": "ES2020", // ou "ESNext"
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ES2020",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src"]
}
